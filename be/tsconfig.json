{
    "compileOnSave": true,
    "compilerOptions": {
      "skipLibCheck": true,
      "module": "commonjs",
      "target": "es5",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
        "@": [""],
        "controllers" : ["./controllers"],
        "routers" : ["./routers"],
        "models" : ["./models"],
        "interfaces" : ["./interfaces"],
        "abstracts" : ["./abstracts"],
        "services" : ["./services"],
        "config" : ["./config"],
        "utils" : ["./utils"],
        "constant" : ["./constant"],
      },
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "watch": false
    },
    "include": [
      "src/**/*"
    ],
  }
  